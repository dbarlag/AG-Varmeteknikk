---
import '@/styles/global.css';
import SEOHead from '@/components/astro/SEOHead.astro';
import Header from '@/components/astro/Header.astro';
import Footer from '@/components/astro/Footer.astro';

interface Props {
  title?: string;
  description?: string;
  keywords?: string;
  ogType?: string;
  ogImage?: string;
  structuredData?: object;
}

const {
  title = 'AG Varmeteknikk - Oljefyrservice og Vedlikehold i Norge',
  description = 'Spesialister på service, vedlikehold og oppgradering av oljefyringsanlegg. Over 15 års erfaring med døgnåpen service 24/7. Sertifisert og pålitelig.',
  keywords = 'oljefyr, oljefyrservice, oljebrenner, vedlikehold, service, oppgradering, tankrensing, tankservice, biobrensel, AG Varmeteknikk, Norge',
  ogType = 'website',
  ogImage = '/og-image.jpg',
  structuredData,
} = Astro.props;

const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="nb">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Preconnect to Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Preload LCP hero image (local, served from edge) -->
    <link
      rel="preload"
      as="image"
      type="image/webp"
      href="/images/hero-bg.webp"
      imagesrcset="/images/hero-bg-1024.webp 1024w, /images/hero-bg.webp 1920w"
      imagesizes="100vw"
      fetchpriority="high"
    />

    <!-- Load fonts asynchronously (non-render-blocking) -->
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@500;600;700&family=Figtree:wght@400;500;600&display=swap"
      media="print"
      onload="this.media='all'"
    />
    <noscript>
      <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@500;600;700&family=Figtree:wght@400;500;600&display=swap" />
    </noscript>

    <SEOHead
      title={title}
      description={description}
      keywords={keywords}
      ogType={ogType}
      ogImage={ogImage}
      structuredData={structuredData}
    />
  </head>
  <body class="bg-background text-foreground antialiased">
    <Header currentPath={currentPath} />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
