---
// Pure Astro Hero - no JS framework required, content visible immediately
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Background Image (locally hosted for faster LCP) -->
  <div class="absolute inset-0">
    <img
      srcset="/images/hero-bg-1024.webp 1024w, /images/hero-bg.webp 1920w"
      sizes="100vw"
      src="/images/hero-bg.webp"
      alt="Oljefyringssystem - AG Varmeteknikk"
      class="w-full h-full object-cover"
      loading="eager"
      fetchpriority="high"
      decoding="async"
    />
    <!-- Gradient overlay -->
    <div class="absolute inset-0 bg-gradient-to-br from-brand-navy-dark/90 via-brand-navy/85 to-brand-blue-dark/80"></div>
  </div>

  <!-- Animated orbs (CSS only) -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none" aria-hidden="true">
    <div class="hero-orb hero-orb-1 absolute top-0 left-1/4 w-[600px] h-[600px] bg-brand-blue/15 rounded-full blur-3xl"></div>
    <div class="hero-orb hero-orb-2 absolute bottom-0 right-1/4 w-[500px] h-[500px] bg-accent-orange/10 rounded-full blur-3xl"></div>
  </div>

  <div class="relative z-10 max-w-7xl w-full mx-auto px-6 py-32">
    <div class="max-w-4xl">
      <!-- Badge -->
      <div class="hero-fade-in inline-flex items-center gap-2 px-5 py-2.5 bg-white/10 backdrop-blur-xl border border-white/20 rounded-full mb-8 shadow-lg shadow-black/5">
        <span class="text-white text-sm tracking-wide font-medium">Over 15 års erfaring</span>
      </div>

      <!-- Main heading - VISIBLE IMMEDIATELY -->
      <h1 class="hero-fade-in hero-delay-1 text-6xl md:text-8xl font-bold text-white mb-6 leading-[1.1]">
        AG Varmeteknikk
      </h1>

      <!-- Subheading -->
      <p class="hero-fade-in hero-delay-2 text-2xl md:text-3xl text-white/90 mb-10 leading-relaxed font-light">
        Spesialister på service, vedlikehold og oppgradering av oljefyringsanlegg
      </p>

      <!-- CTA Buttons -->
      <div class="hero-fade-in hero-delay-3 flex flex-wrap gap-4">
        <a
          href="/kontakt"
          class="group px-8 py-4 bg-white text-brand-navy rounded-full hover:shadow-2xl hover:shadow-white/30 transition-all duration-300 flex items-center gap-2 font-semibold hover:scale-[1.02]"
          aria-label="Bestill service hos AG Varmeteknikk"
        >
          <span>Bestill service</span>
          <!-- Arrow Right Icon -->
          <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform duration-200" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
            <path d="M5 12h14"/>
            <path d="m12 5 7 7-7 7"/>
          </svg>
        </a>
        <a
          href="tel:40213090"
          class="px-8 py-4 bg-white/10 backdrop-blur-xl text-white border border-white/30 rounded-full hover:bg-white/20 transition-colors duration-300 font-semibold flex items-center gap-2 shadow-lg shadow-black/5"
          aria-label="Ring oss på 40 21 30 90"
        >
          <!-- Phone Icon -->
          <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
            <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
          </svg>
          <span>40 21 30 90</span>
        </a>
      </div>

      <!-- Stats -->
      <div class="hero-fade-in hero-delay-4 mt-20 grid grid-cols-3 gap-8 max-w-2xl">
        <div class="border-l-2 border-white/30 pl-5">
          <div class="text-4xl font-bold text-white mb-1">15+</div>
          <div class="text-sm text-white/70 font-light">År med erfaring</div>
        </div>
        <div class="border-l-2 border-white/30 pl-5">
          <div class="text-4xl font-bold text-white mb-1">24/7</div>
          <div class="text-sm text-white/70 font-light">Døgnåpen service</div>
        </div>
        <div class="border-l-2 border-white/30 pl-5">
          <div class="text-4xl font-bold text-white mb-1">100%</div>
          <div class="text-sm text-white/70 font-light">Sertifisert</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-10 left-1/2 -translate-x-1/2 hero-fade-in hero-delay-5" aria-hidden="true">
    <div class="scroll-indicator w-6 h-10 border-2 border-white/20 rounded-full p-1 backdrop-blur-sm bg-white/5">
      <div class="scroll-dot w-1.5 h-3 bg-white/70 rounded-full mx-auto"></div>
    </div>
  </div>
</section>

<style is:global>
  /* CSS-only fade-in animations - content visible by default, animations enhance */
  .hero-fade-in {
    animation: heroFadeIn 0.6s ease-out forwards;
  }

  .hero-delay-1 { animation-delay: 0.1s; }
  .hero-delay-2 { animation-delay: 0.2s; }
  .hero-delay-3 { animation-delay: 0.3s; }
  .hero-delay-4 { animation-delay: 0.4s; }
  .hero-delay-5 { animation-delay: 1s; }

  @keyframes heroFadeIn {
    from {
      opacity: 0.7;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Respect reduced motion preference */
  @media (prefers-reduced-motion: reduce) {
    .hero-fade-in {
      animation: none;
      opacity: 1;
      transform: none;
    }
    .hero-orb,
    .scroll-indicator,
    .scroll-dot {
      animation: none !important;
    }
  }

  /* Floating orb animations */
  .hero-orb-1 {
    animation: orbFloat1 25s ease-in-out infinite alternate;
  }

  .hero-orb-2 {
    animation: orbFloat2 30s ease-in-out infinite alternate;
  }

  @keyframes orbFloat1 {
    0% { transform: translate(0, 0) scale(1); }
    100% { transform: translate(80px, 40px) scale(1.15); }
  }

  @keyframes orbFloat2 {
    0% { transform: translate(0, 0) scale(1); }
    100% { transform: translate(-60px, -40px) scale(1.2); }
  }

  /* Scroll indicator animation */
  .scroll-indicator {
    animation: scrollBounce 2.5s ease-in-out infinite;
  }

  .scroll-dot {
    animation: scrollDotPulse 2s ease-in-out infinite;
  }

  @keyframes scrollBounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(8px); }
  }

  @keyframes scrollDotPulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.3; }
  }
</style>
